@page
@model RegisterModel

@{
	Layout = "_Layout1";
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>MahaLAnd Login Page</title>
	<link rel="stylesheet" href="~/css/registration.css">
	<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
	<div class="wrapper">
		<div class="header">
			<div class="top">
				<div class="logoo">
					<img src="~/img/mahaLAnd.jpg" alt="mahaland" style="width: 230px;">
				</div>
				<div class="info">
					<p>Sign up to see photos and videos from your friends.</p>
				</div>
				<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form">
						<div class="input_field">
							<input asp-for="Input.Email" placeholder="Email" class="input" />
							<span asp-validation-for="Input.Email" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.Name" placeholder="Name" class="input" />
							<span asp-validation-for="Input.Name" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.Surname" placeholder="Surname" class="input" />
							<span asp-validation-for="Input.Surname" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.UserName" placeholder="Username" class="input" />
							<span asp-validation-for="Input.UserName" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.Age" placeholder="Age" class="input" />
							<span asp-validation-for="Input.Age" class="text-danger"></span>
						</div>
						<div class="input_field">
							<select asp-for="Input.Gender" class="input" asp-items="Html.GetEnumSelectList<Gender>()"></select>
							<span asp-validation-for="Input.Gender" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.Password" placeholder="Password" class="input" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.ConfirmPassword" placeholder="Confirm password" class="input" />
							<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
						</div>
						<!--<div class="btn">
							<a href="#" style="text-decoration:none;">Sign Up</a>
						</div>-->
						<button type="submit" class="btn btn-primary">Sign up</button>
					</div>
				</form>
			</div>
			<div class="login">
				<p>Have an account? <a asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration:none;">Login</a></p>
			</div>
		</div>
	</div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
