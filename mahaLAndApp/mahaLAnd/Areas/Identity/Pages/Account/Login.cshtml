@page
@model LoginModel

@{
    Layout = "_Layout1";
    ViewData["Title"] = "Log in";
}

<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<title>MahaLAnd Login Page</title>
	<link rel="stylesheet" href="~/css/login.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css" integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous" referrerpolicy="no-referrer" />
</head>
<body>
	<div class="wrapper">
		<div class="header">
			<br />
			<div class="top">
				<div class="logoo">
					<img src="~/img/mahaLAnd.jpg" alt="mahaland" style="width: 230px;">
				</div>
				<form asp-route-returnUrl="@Model.ReturnUrl" method="post">
					<div asp-validation-summary="All" class="text-danger"></div>
					<div class="form">
						<div class="input_field">
							<input asp-for="Input.UserName" placeholder="Username" class="input" />
							<span asp-validation-for="Input.UserName" class="text-danger"></span>
						</div>
						<div class="input_field">
							<input asp-for="Input.Password" placeholder="Password" class="input" />
							<span asp-validation-for="Input.Password" class="text-danger"></span>
						</div>
						<button type="submit" class="btn btn-primary">Log in</button>
					</div>
				</form>
				<div class="or">
					<div class="line"></div>
					<p></p>                     
					<div class="line"></div>
				</div>
				<div class="dif">
					<div class="forgot">
						<a id="forgot-password" asp-page="./ForgotPassword" style="text-decoration:none;">Forgot your password?</a>
					</div>
				</div>
			</div>
			<div class="signup">
				<p>Don't have an account? <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" style="text-decoration:none;">Sign up</a></p>
			</div>
		</div>
	</div>
</body>
</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
